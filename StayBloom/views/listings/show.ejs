<% layout("./layouts/boilerplate.ejs") %>
<script>
    const mapToken="<%= process.env.MAP_TOKEN %>"
    const listing= <%- JSON.stringify(listing) %>
</script>
<body>
    <div class="row">
        <div class="col-10 offset-2">
            <h1><%= listing.title %></h1>
            <div class="card col-7 list-card">
                <img src="<%= listing.image.url %>" class="show-img" alt="listing_image">
                <div class="card-body">
                <p class="card-text">
                    <i>Owned by <%= listing.owner.username %></i><br>
                    <%= listing.description %><br>
                    <b>Price:</b> <%= listing.price %><br>
                    <b>Location:</b> <%= listing.location %><br>
                    <b>Country:</b> <%= listing.country %><br>
                </p>
                </div>
              </div>            
        </div>
    </div>
    <% if(currUser && currUser._id.equals(listing.owner._id)){%>
    <div class="btns">
        <a href="/listing/<%= listing.id %>/edit" class="btn btn-dark col-1 offset-2">Edit</a>
    <form method="Post" action="/listing/<%= listing.id %>?_method=Delete">
        <button class="btn btn-danger offset-4">Delete</button>
    </form>
    </div>
    <% } %>
    <div class="col-10 offset-2">
        <hr>
        <% if(currUser){ %>
        <h4>Leave a Review</h4>
        <form method="POST" action="/listing/<%= listing.id %>/review" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
            <fieldset class="starability-slot">
                <legend>Rating:</legend>
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
              
            </div>
            <br><br>
            <div class="mb-3 mt-3"> 
                <label for="comment">Comment</label>
                <textarea type="text" id="comment" name="review[comment]" cols="30" rows="5" class="form-control" required></textarea>
            </div>
            <button class="btn btn-dark mb-3">Submit</button>
        </form>
        <hr>
        <% } %>
        <h4>All Reviews</h4>
        <div class="row">
        <% if (listing.review && listing.review.length > 0) { %>
            <% for(let review of listing.review){ %>
                <div class="card col-5 mb-3 ms-3 ">
                    <div class="card-body">
                        <h5 class="card-title mt-3">@<%=review.author.username %></h5>
                        <p class="starability-result" data-rating=<%= review.rating %>>
                        </p>
                        <p class="card-text"><%= review.comment %></p>
                        <p class="card-text"><%= review.rating %> Star</p>
                    </div>
                    <% if(currUser && currUser._id.equals(review.author._id)){ %>
                    <form method="POST" action="/listing/<%= listing._id %>/review/<%= review.id %>?_method=DELETE">
                        <button class="btn btn-danger mb-3 mt-3">Delete</button>
                    </form>
                    <% } %>
                    
                </div>
            <% } %>         
            <% } else { %>
                <p>No reviews yet.</p>
            <% } %>
            <hr>
        </div>
        <div class="row">
            <h3>Where you'll be</h3>
            <div id="map"></div>
        </div>

    </div>
    <script src="/js/map.js"></script>
   
</body>
